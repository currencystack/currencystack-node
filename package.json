{
  "name": "currencystack",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "homepage": "https://currencystack.io",
  "scripts": {
    "start": "babel-node src/index.js",
    "prebuild": "rimraf dist",
    "build": "rimraf dist && babel src --out-dir dist",
    "lint": "eslint src/**",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublish": "npm run lint && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "files": [
    "dist"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/node": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "1.15.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0"
  },
  "lint-staged": {
    "linters": {
      "src/**": [
        "prettier --write",
        "eslint",
        "yarn run build"
      ]
    },
    "ignore": [
      ".gitignore",
      "node_modules"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0"
  }
}
